{
  "name": "void-server",
  "version": "0.1.0",
  "description": "Void Server",
  "main": "server/index.js",
  "scripts": {
    "start": "npx pm2 start ecosystem.config.js",
    "stop": "npx pm2 stop ecosystem.config.js",
    "restart": "npx pm2 restart ecosystem.config.js",
    "logs": "npx pm2 logs",
    "status": "npx pm2 status",
    "build": "npm run build --prefix client",
    "plugin:add": "./scripts/plugin-add.sh",
    "plugin:remove": "./scripts/plugin-remove.sh",
    "plugin:update": "./scripts/plugin-update.sh",
    "plugin:status": "./scripts/plugin-status.sh",
    "hooks:install": "./.githooks/install-hooks.sh",
    "postinstall": "npm run hooks:install || true"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  }
}
