{
  "name": "void-server",
  "version": "0.11.2",
  "description": "Void Server",
  "main": "server/index.js",
  "scripts": {
    "start": "npx pm2 start ecosystem.config.js",
    "stop": "npx pm2 stop ecosystem.config.js",
    "restart": "npx pm2 restart ecosystem.config.js",
    "logs": "npx pm2 logs",
    "status": "npx pm2 status",
    "build": "npm run build --prefix client",
    "plugin:add": "./scripts/plugin-add.sh",
    "plugin:remove": "./scripts/plugin-remove.sh",
    "plugin:update": "./scripts/plugin-update.sh",
    "plugin:status": "./scripts/plugin-status.sh",
    "hooks:install": "bash ./.githooks/install-hooks.sh",
    "postinstall": "[ -f ./.githooks/install-hooks.sh ] && bash ./.githooks/install-hooks.sh || true",
    "test": "npm run test:native",
    "test:native": "cross-env TEST_ENV=native npx cucumber-js",
    "test:docker": "cross-env TEST_ENV=docker npx cucumber-js",
    "test:ci": "cross-env TEST_ENV=ci npx cucumber-js --format json:tests/e2e/reports/results.json",
    "test:e2e": "cross-env TEST_ENV=native npx cucumber-js",
    "test:e2e:smoke": "cross-env TEST_ENV=native npx cucumber-js --tags @smoke",
    "test:env:start": "bash ./scripts/test-env.sh start",
    "test:env:stop": "bash ./scripts/test-env.sh stop",
    "test:env:status": "bash ./scripts/test-env.sh status",
    "test:seed": "node ./scripts/seed-test-data.js seed",
    "test:install": "npx playwright install chromium"
  },
  "dependencies": {
    "@solana/spl-token": "^0.4.0",
    "@solana/web3.js": "^1.95.0",
    "adm-zip": "^0.5.16",
    "bip39": "^3.1.0",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "dockerode": "^4.0.9",
    "dotenv": "^16.3.1",
    "ed25519-hd-key": "^1.3.0",
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.5",
    "neo4j-driver": "^6.0.1",
    "playwright": "^1.57.0",
    "socket.io": "^4.8.1",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.9.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.0.0",
    "cross-env": "^7.0.3",
    "pm2": "^5.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0",
    "wait-on": "^8.0.0"
  }
}
